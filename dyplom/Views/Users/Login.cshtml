    <!-- account section starts -->
    
    <div class="account-form-container">
        <section class="account-form">
            <form asp-action="Login" method="post">
                <h3>Вітаю!</h3>
                <input asp-for="Email" type="email"  maxlength="50" placeholder="введіть електронну адресу" class="input">
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Password"type="password"  maxlength="20"
                       placeholder="введіть пароль" class="input">
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="meserror" asp-validation-summary="All"></div>
                @if (ViewData["UserNotFound"] != null && (bool)ViewData["UserNotFound"])
                {
                    <div style="color:red;font-size:1.2rem; padding-bottom:10px;display:flex;margin-left:10px; "class="meserror">* Невірний Email або пароль!</div>
                }
                <p>Не маєте акаунта?<a href="register.html">Зареєструватися</a></p>
                <input type="submit" value="Увійти" name="submit" class="btn">
            </form>
            
        </section>
    </div>
    <!-- account section ends -->
    <!-- footer section starts -->
    <div class="footer">
        <section>
            <div class="share">
                <a href="#" class="fab fa-facebook-f"></a>
